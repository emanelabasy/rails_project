<p id="notice"><%= notice %></p>

<h1>Listing My Groups</h1>

<table class="table">
  <thead class="thead-default">
    <tr>
      <th>#</th>
      <th>Group</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <tr>
    <% i=0 %>
    <% @groups.each do |group| %>
        <% if current_user.id == group.user.id %>
           <th scope="row"><%= i+=1 %></th>
            <td><%= group.group %></td>

       <td> <a class="btn btn-primary" <%= link_to 'Show Group', group %>&nbsp;&nbsp;||&nbsp;&nbsp;

       <a class="btn btn-primary"<%= link_to 'Edit', edit_group_path(group) %>&nbsp;&nbsp;||&nbsp;&nbsp;

      <a class="btn btn-danger" <%= link_to 'Destroy', group, method: :delete, data: { confirm: 'Are you sure?' } %></td>

      <% end %> 
      </tr>
    <% end %>
  </tbody>
</table>


